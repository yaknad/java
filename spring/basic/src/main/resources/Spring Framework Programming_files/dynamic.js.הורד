var id;
var subId = [];

function GetHost() {
    var url = new String(window.location.href);
    var host = "http://www.sela.co.il";


    if (url.indexOf("www", 0) == -1) {
        if (url.indexOf("selagroup", 0) != -1) {
            host = "http://selagroup.sela.co.il";
        }
        else {
            host = "http://sela.co.il";
        }
    }


    return host;
}


